<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:weightSum="10"
    android:orientation="vertical"
    android:background="#ff000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_weight="2"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="monospace"
            android:gravity="center_vertical"
            android:text="@string/nbt"
            android:textColor="#ffffffff"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/nbt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="#ff000000"
            android:clickable="false"
            android:enabled="false"
            android:focusable="false"
            android:fontFamily="monospace"
            android:gravity="center_vertical"
            android:inputType="text"
            android:text="0"
            android:textColor="#ffffffff"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="2"
        android:layout_marginTop="10dp"
        android:gravity="center">
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/greyroundedbutton"
            android:id="@+id/case1"
            android:layout_marginRight="5dp" />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/greyroundedbutton"
            android:id="@+id/case2"
            android:layout_marginRight="5dp" />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/greyroundedbutton"
            android:id="@+id/case3"
            android:layout_marginRight="5dp" />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/greyroundedbutton"
            android:id="@+id/case4"
            android:layout_marginRight="5dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="2"
        android:gravity="center"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="monospace"
            android:gravity="center_vertical"
            android:text="@string/nbvb"
            android:textColor="#ffffffff"
            android:textSize="12sp" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="0"
            android:id="@+id/nbvb"
            android:visibility="visible"
            android:inputType="text"
            android:gravity="center"
            android:focusable="false"
            android:enabled="false"
            android:clickable="false"
            android:background="#ff000000"
            android:layout_marginLeft="10dp"
            android:textColor="#ffffffff" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="2"
        android:gravity="center"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="monospace"
            android:gravity="center_vertical"
            android:text="@string/nbvm"
            android:textColor="#ffffffff"
            android:textSize="12sp" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="0"
            android:id="@+id/nbvm"
            android:visibility="visible"
            android:inputType="text"
            android:gravity="center"
            android:focusable="false"
            android:enabled="false"
            android:clickable="false"
            android:background="#ff000000"
            android:layout_marginLeft="10dp"
            android:textColor="#ffffffff" />
    </LinearLayout>


    <LinearLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/verifier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffc81119"
            android:clickable="true"
            android:fontFamily="monospace"
            android:text="VÃ©rifier" />

        <Button
            android:id="@+id/nouveau"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="#ffc81119"
            android:clickable="true"
            android:fontFamily="monospace"
            android:text="Nouveau" />
    </LinearLayout>



</LinearLayout>
